<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Switch
        android:text="@string/string_listener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switchBroadcastListen"
        android:padding="10dp"
        android:layout_weight=".2"
        android:textOff="@string/string_listener"
        android:textOn="@string/string_broadcaster" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:weightSum="9"
        android:padding="10dp">

        <Button
            android:text="Stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMyRefresh"
            android:layout_weight="3"
            android:layout_marginBottom="10dp" />

        <Button
            android:text="Play/Pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMyPlayPause"
            android:layout_weight="3"
            android:layout_marginBottom="10dp" />

        <Button
            android:text="Stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMyStop"
            android:layout_weight="3" />
    </LinearLayout>

</LinearLayout>